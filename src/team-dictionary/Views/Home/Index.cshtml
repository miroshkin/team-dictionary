@using team_dictionary.Data
@model SearchModel

@{
    ViewData["Title"] = "Start page";
}

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-6">
            <br />
            <div id="custom-search-input">
                <div class="input-group col-md-12">
                    @Html.TextBox("SearchString", null, new { @class = "form-control input-lg" })
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-success btn-lg margin-right">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>
                </div>
                <br />
                @if (Model != null)
    {
        if (Model.SearchResult.Any())
        {
            <ul class="list-group list-group-flush">
                @foreach (var article in Model.SearchResult)
    {
        @foreach (var translation in article.Translations)
         {
                <li class="list-group-item">
                    <strong>@article.Word</strong> - @translation.Text @if (translation.BestTranslation)
                    {<span>&#10032;</span>}
                    <br />
                    @foreach (var query in article.SqlQueries)
                    {
                        <div>@query.Name</div>
                        <div>@query.Text</div>
                    }


                </li>
         }
        
}
            </ul>
}
else
{
            <ul class="list-group list-group-flush">
                @if(string.IsNullOrEmpty(Model.SearchString)){
                    <li class="list-group-item">Введите строку для поиска</li>
                }
                else
                {
                    <li class="list-group-item">Упс! по запросу "@Model.SearchString" ничего не найдено </li>
                }
            </ul>
}
}

            </div>
        </div>
    </div>
}