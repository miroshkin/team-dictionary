@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
        <div class="col-md-6">
            <h2>Custom search field</h2>
            <div id="custom-search-input">
                <div class="input-group col-md-12">
                    <input type="text" class="form-control input-lg" placeholder="Введите теримн для поиска ..." />
                    <span class="input-group-btn">
                        <button class="btn btn-info btn-lg" type="button" onclick="location.href='@Url.Action("Search", "Home")'">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </span>
                </div>
            </div>
    </div>
</div>
